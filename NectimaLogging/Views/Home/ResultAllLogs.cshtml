@model LogListViewModel

@{
    ViewData["Title"] = "ResultAllLogs";
}

<h2>ResultAllLogs</h2>


<div id="page-content">
    <table class="table table-sm table-responsive table-striped">
        <thead>
            <tr>
                <th scope="col">id</th>
                <th scope="col">Date</th>
                <th scope="col">Level</th>
                <th scope="col">Exception</th>
                <th scope="col">Thread</th>
                <th scope="col">StackTrace</th>
                <th scope="col">Message</th>
                <th scope="col">MachineName</th>
                <th scope="col">Logger</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var log in Model.Logs)
            {
                <tr>
                    <td>
                        @log.Id
                    </td>
                    <td>
                        @log.Date
                    </td>
                    <td>
                        @log.Level
                    </td>
                    <td>
                        @log.Exception
                    </td>
                    <td>
                        @log.Thread
                    </td>
                    <td>
                        @log.StackTrace
                    </td>
                    <td>
                        @log.Message
                    </td>
                    <td>
                        @log.MachineName
                    </td>
                    <td>
                        @log.Logger
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<p>@Model.PagingInfo.CurrentPage</p>
<div class="page-container btn-group-center pull-right m-1">
    <div class="prev btn">
        <form method="post" asp-action="ResultAllLogs" role="form">
            <input asp-for="@Model.PagingInfo.IsPrevious"
                   name="isPrevious" type="hidden" value="true" checked />
            <input type="hidden" name="previous" value="@Model.PagingInfo.CurrentPage" />
            <input type="submit" value="Previous" />
        </form>
    </div>

    @for (int i = 1; i <= 10; i++)
    {
        <div class="btn">
            <a asp-action="ResultAllLogs"
               asp-route-logPage="@i">@i</a>


            @if (Model.PagingInfo.CurrentPage == i)
            {
                <a class="active" asp-action="ResultAllLogs"
                   asp-route-logPage="@Model.PagingInfo.CurrentPage"></a>
                   
            }

        </div>
    }
    <div class="btn">
        <form method="post" asp-action="ResultAllLogs" role="form">
            <input asp-for="@Model.PagingInfo.IsNext"
                   name="isNext" type="hidden" value="true" checked />
            <input type="hidden" name="next" value="@Model.PagingInfo.CurrentPage" />
            <input type="submit" value="Next" />
        </form>
    </div>
</div>




